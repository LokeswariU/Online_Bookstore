<%- include('partials/external_header') %>
<div>
  <div class="container">
    <div class="row">
      <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
        <div class="card login-form shadow" style="color:white;">
          
          <img width="100" height="100" src="../images/logo.jpg" alt="UTD Online BookStore" class="center">
          <p class="logo-text center">UTD Online BookStore</p>
          <h5 class="center">Login</h5>

          <form action="/login" method="POST" class = "col-xs-8 text-center login-form-content">
          
            <div class="form-group">
              <input type="text" name="username" class="form-control" placeholder="Enter Your Name" required>
            </div>
            
            <div class="form-group">
              <input type="password" name="password" class="form-control" placeholder="Password">
            </div>
            <p>Create a New Account! <a href="/register"> <span>Signup</span></a></p>
            
            <button type="submit" class="btn btn-primary sb-button ">Login</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
<%- include('partials/external_footer') %>