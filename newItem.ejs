<%- include ('partials/header') %>
<div class="container">
	<h1 style="text-align: center">Add a New Book</h1>
	<div style="width: 30%; margin: 40px auto;">
		<form action="/items" method="POST">
			<div class="form-group">
				<input class="form-control" placeholder="Title" type="text" name="title" >
			</div>
			<div class="form-group">
				<input class="form-control" placeholder="Image" type="text" name="image" >
			</div>
			<div class="form-group">
				<textarea class="form-control" placeholder="Description" name="description"></textarea>
			</div>
			<div class="form-group">
				<input class="form-control" type="text" placeholder="Book Author" name="author">
			</div>
			<div class="form-group">
				<select class="form-control" name = "bookgenre">
					<option value="" >All</option>
					<option value="Fantasy">Fantasy Genre</option>
					<option value="ScienceFiction">ScienceFiction Genre</option>
					<option value="Adventure">Adventure Genre</option>
					<option value="Children">Children's Literature</option>
					<option value="Horror">Horror Genre</option>
				</select>
			</div>
			<div class="form-group">
				<input class="form-control" type="text" placeholder="Price Currency (USD)" name="price_currency" >
			</div>

			<div class="form-group">
				<input class="form-control" type="text" placeholder="Price Value" name="price_value" >
			</div>
			<div class="form-group">
				<button class="btn btn-lg btn-primary btn-block">ADD!</button>
			</div>
		</form>
		<button onclick = "window.location.href='/'" class="form-control btn btn-lg btn-secondary">Back to List</button>
	</div>
</div>