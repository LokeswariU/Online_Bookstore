<%- include('partials/external_header') %>
<div>
  <div class="container">
    <div class="row">
      <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
        <div class="card login-form shadow" style="color:white;">

          <img width="100" height="100" src="../images/logo.jpg" alt="UTD Online BookStore" class="center">
          <p class="logo-text center">UTD Online BookStore</p>
          <h5 class="center">Register</h5>
          <% if (error) { %>
            <p style="color:red";><%= error.message%> </p>
          <% } %>

          <form action="/register" method="POST" class = "col-xs-8 text-center login-form-content">

            <div class="form-group">
              <input type="text" name="username" id="username" class="form-control" minlength=1 placeholder="Enter Your Name" required>
            </div>

            <div class="form-group">
              <input type="password" name="password" id="password" class="form-control" minlength=8 title="8 characters minimum for password" placeholder="Password" required>
            </div>
            <p>Already having an existing account?<a href="/login"> <span>Login</span></a></p>
            <button type="text" class="btn btn-primary sb-button ">Register</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
<%- include('partials/external_footer') %>